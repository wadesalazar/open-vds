function(BuildCrc32c)
  if (WIN32)
    list(APPEND CRC32C_LIBS_LIST "lib/crc32c.lib")

    list(APPEND CRC32C_DLLS_LIST "bin/crc32c.dll")
  elseif (APPLE)
  else()
    list(APPEND CRC32C_LIBS_LIST "lib${LIBSUFFIX}/libcrc32c.so")
  endif()

  list(APPEND CRC32C_CMAKE_ARGS "-DBUILD_SHARED_LIBS=ON")
  if (WIN32)
    list(APPEND CRC32C_CMAKE_ARGS "-DCMAKE_WINDOWS_EXPORT_ALL_SYMBOLS=ON")
  endif()
  list(APPEND CRC32C_CMAKE_ARGS "-DCRC32C_BUILD_TESTS=OFF")
  list(APPEND CRC32C_CMAKE_ARGS "-DCRC32C_BUILD_BENCHMARKS=OFF")
  list(APPEND CRC32C_CMAKE_ARGS "-DCRC32C_USE_GLOG=OFF")
  BuildExternal(crc32c ${crc32c_VERSION} "" ${crc32c_SOURCE_DIR} "${CRC32C_LIBS_LIST}" "${CRC32C_DLLS_LIST}" "" "" "${CRC32C_CMAKE_ARGS}")
  set(crc32c_INSTALL_INT_CONFIG ${crc32c_INSTALL_INT_CONFIG} PARENT_SCOPE)
endfunction()
